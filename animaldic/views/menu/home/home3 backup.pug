extends ../../layout

block content
    script(src="/js/test2.js")
    link(rel='stylesheet', href='/css/check2.css')
    link(rel='stylesheet', href='/css/home.css')
    link(rel='stylesheet', href='/css/home2.css')
    article
        h3.checklist
            if user
                p=user.m_username
                    strong  의 CheckList
                    i.fa.fa-check-square
                section.input.ckcss
                    form(method="POST") 
                        input.add_check(placeholder="할일입력", name="u_check", id="u_check")
                        input.input_hidden(type="text",  name="u_user", id="u_user")
                        input.input_hidden(type="text",  name="u_num", id="u_num")
                        input.add(type="submit",value="추가 +")
                section.list.ckcss
                    each item in check
                        ul(data-u_num= `${item.u_num}`)
                            li= item.u_check
                                button.delete
                                    i.fa.fa-times 　
                h3.other 나의 반려동물
                    i.fa.fa-paw
                div.etc.notwhitespace.mypet
                    div.etc.notwhitespace.mypetimgblock
                        img.mypetimg(src="/images/noimage.png", alt="사진등록안함")
                    div.divdiv.mypetinform
                        article.inform
                            p 반려동물 이름은?
                            p 나이?
                        p 소개글을 작성해보세요!
                        a.insert(href="/insert") 추가/수정
            else
                p
                    strong CheckList 작성하기
                    i.fa.fa-check-square
                section.input.ckcss
                    form
                        input.add_check(placeholder="로그인 후 이용가능합니다")
                        input.add.ex(value="추가 +")
                section.list.ckcss
                    ul
                        li 로그인후 나만의 체크리스트를 작성하세요!
                        li EX) 산책가기
                        li EX) 목욕시키기
                        li EX) 놀아주기
                        li EX) 사료 구입하기
                p 　
                p 　
                h3.other Other Contents
                    i.fa.fa-plus-circle
                div.etc.notwhitespace
                    article
                        a(href="/youtube")
                            img.youtube(src="images/youtube.png" alt="유튜브아이콘")
                            p 추천 영상
                    article
                        a(href="/survey")
                            img(src="images/sur.png")
                            p 나는 반려동물을
                            p 잘 키울 수 있을까?
                            p 스스로 체크해보자!
                    article
                        a(href="/recom")
                            img(src="images/animalicon.png")
                            p 반려동물 어플 추천